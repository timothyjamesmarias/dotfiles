#!/usr/bin/env bash

# install-packages - Simple, declarative package installation
# Works on macOS (Homebrew) and Linux (Fedora)

set -e

CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

log_info() { echo -e "${CYAN}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[OK]${NC} $1"; }
log_warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }

echo ""
echo "╔════════════════════════════════════════════╗"
echo "║     Declarative Package Installation      ║"
echo "╚════════════════════════════════════════════╝"
echo ""

# Detect OS
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS
    log_info "Platform: macOS"

    # Check if Homebrew is installed
    if ! command -v brew &> /dev/null; then
        log_info "Installing Homebrew..."
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

        # Add to PATH for current session
        eval "$(/opt/homebrew/bin/brew shellenv)"
        log_success "Homebrew installed"
    else
        log_success "Homebrew already installed"
    fi

    # Install packages from Brewfile
    if [ -f "Brewfile" ]; then
        log_info "Installing packages from Brewfile..."
        brew bundle --file=Brewfile
        log_success "Packages installed"
    else
        log_error "Brewfile not found!"
        exit 1
    fi

    echo ""
    log_info "To update packages: brew bundle --file=~/dotfiles/Brewfile"
    log_info "To cleanup unlisted: brew bundle cleanup --file=~/dotfiles/Brewfile --force"

elif [[ -f /etc/fedora-release ]]; then
    # Fedora Linux
    log_info "Platform: Fedora Linux"

    if [ -f "fedora-packages.txt" ]; then
        log_info "Installing packages from fedora-packages.txt..."

        # Read packages and install
        grep -v '^#' fedora-packages.txt | grep -v '^$' | while read -r package; do
            if ! rpm -q "$package" &> /dev/null; then
                log_info "Installing $package..."
                sudo dnf install -y "$package" || log_warn "Failed to install $package"
            else
                log_success "$package already installed"
            fi
        done

        log_success "Packages installed"
    else
        log_error "fedora-packages.txt not found!"
        exit 1
    fi

    echo ""
    log_info "To update packages: sudo dnf upgrade -y"

else
    log_error "Unsupported operating system: $OSTYPE"
    exit 1
fi

echo ""
log_success "Installation complete!"
echo ""
echo "Next steps:"
echo "  1. Install language toolchains via asdf/sdkman"
echo "  2. Symlink dotfiles: stow alacritty ctags git nvim scripts tmux zsh"
echo "  3. Restart your shell"
echo ""
