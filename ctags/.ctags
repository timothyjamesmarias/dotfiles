--languages=+Ruby,+PHP,+HTML,+CSS,+JavaScript,+Sass

# Rails Slim
--langmap=Ruby:.rb.rake.rakefile.gemspec.ru
--langmap=HTML:+.erb.slim.haml
--langmap=PHP:+.php.inc.module.theme.install
--langmap=Sass:+.scss.sass

# Index CSS class and ID selectors
--regex-css=/\.([A-Za-z0-9_-]+)/\1/c,class/
--regex-css=/#([A-Za-z0-9_-]+)/\1/i,id/

# ERB and Slim: try to catch embedded ruby methods
--regex-ruby=/\<%=\s*([A-Za-z0-9_!?]+)\s*%>/\1/m,erb_method/
--regex-ruby=/\#\{\s*([A-Za-z0-9_!?]+)\s*\}/\1/m,interpolation/

# PHP blade templates
--regex-php=/@([a-zA-Z_]+)/\1/b,blade_directive/
