root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,jsx,tsx,vue,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = tab
indent_size = 4

[*.{rb,slim,erb}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
